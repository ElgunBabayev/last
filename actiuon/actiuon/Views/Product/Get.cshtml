                        <li data-days="00">00</li>
                        <li data-hours="00">00</li>
                        <li data-minuts="00">00</li>
                        <li data-seconds="00">00</li>
                    </ul>
                </div>
            </div>
            <div class="bid-prod col-6">
                <h2>@Model.Name</h2>

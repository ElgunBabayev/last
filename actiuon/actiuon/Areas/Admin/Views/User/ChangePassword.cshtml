@model User
<div class="row">
    <div class="col-8">

        <h2 class="text-danger">
            Do you surely want to change password of this User?
        </h2>

        <h4>Email: <b>@Model.Email</b></h4>
        <h4>FirstName: <b>@Model.FirstName</b></h4>
        <h4>LastName: <b>@Model.LastName</b></h4>
        <h4>PhoneNum: <b>@Model.PhoneNum</b></h4>
        <h4>Role: <b>@Model.Role</b></h4>
        <hr />

        <form asp-action="ChangePasswordConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="row">
                <div class="col-6 mb-2" >
                    <input type="password" name="password" class="form-control" placeholder="Password" />
                </div>
                <div class="col-6 mb-2">
                    <input type="password" name="repeatPassword" class="form-control" placeholder="Repeat Password" />
                </div>
                <div class="col-12 mb-4">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </div>
        </form>
        <a asp-action="Index" class="btn btn-primary">Go Back</a>
    </div>
</div>